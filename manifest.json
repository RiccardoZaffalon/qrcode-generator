{
  "description": "Adds a browser action icon to the toolbar. Click the button to generate a QR code for the current URL.",
  "manifest_version": 2,
  "name": "QR Code Generator",
  "version": "1.0",
  "homepage_url": "https://github.com/RiccardoZaffalon/qrcode-generator.git",
  "icons": {
    "48": "icons/qr_code.png"
  },
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_icon": "icons/qr_code.png",
    "default_title": "QR Code Generator",
    "default_popup": "popup/qr_code.html"
  },
  "web_accessible_resources": [
    "beasts/*.jpg"
  ]
}